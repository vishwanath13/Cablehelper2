<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toTopOf="@+id/line_worker_info"
    app:layout_constraintHorizontal_bias="0.5">

    <TextView
        android:id="@+id/amount_earned"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/card"
        android:fontFamily="@font/amarante"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:text="@string/AmountEarned"
        android:textColor="@color/hint"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/Amount_earned"
        app:layout_constraintEnd_toStartOf="@+id/Amount_earned"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Amount_earned" />

    <TextView
        android:id="@+id/dayCount"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/card"
        android:fontFamily="@font/amarante"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:text="@string/Totalday"
        android:textColor="@color/hint"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/DayCount"
        app:layout_constraintEnd_toStartOf="@+id/DayCount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/DayCount" />

    <TextView
        android:id="@+id/line_worker_info"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/card"
        android:fontFamily="@font/amarante"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:text="@string/line_assigned"
        android:textColor="@color/hint"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/Line_worker_info"
        app:layout_constraintEnd_toStartOf="@+id/Line_worker_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Refresh"

        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/btn_show"
        android:fontFamily="@font/amarante"
        android:freezesText="true"
        android:text="@string/Refresh"
        android:textColor="@color/cardview_light_background"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Call"
        app:layout_constraintTop_toBottomOf="@+id/Amount_earned" />

    <Button
        android:id="@+id/Call"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/btn_show"
        android:fontFamily="@font/amarante"
        android:freezesText="true"
        android:text="@string/Call"
        android:textColor="@color/cardview_light_background"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/Refresh"
        app:layout_constraintEnd_toStartOf="@+id/Refresh"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Refresh" />

    <TextView
        android:id="@+id/Line_worker_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/btn_show"
        android:fontFamily="@font/amarante"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:text="TextView"
        android:textColor="@color/cardview_light_background"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/line_worker_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/line_worker_info"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/DayCount"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/btn_show"
        android:fontFamily="@font/amarante"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:text="TextView"
        android:textColor="@color/cardview_light_background"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/Amount_earned"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dayCount"
        app:layout_constraintTop_toBottomOf="@+id/Line_worker_info" />

    <TextView
        android:id="@+id/Amount_earned"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/btn_show"
        android:fontFamily="@font/amarante"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:text="TextView"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/Refresh"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/amount_earned"
        app:layout_constraintTop_toBottomOf="@+id/DayCount" />
</androidx.constraintlayout.widget.ConstraintLayout>