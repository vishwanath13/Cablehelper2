<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".ui.new_customer_Fragment">

    <Button
        android:id="@+id/new_Line"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/btn_show"
        android:fontFamily="sans-serif-black"
        android:freezesText="true"
        android:shadowColor="#00BCD4"
        android:text="@string/New_paper"
        android:textColor="@color/cardview_light_background"
        app:layout_constraintBottom_toBottomOf="@+id/edit_Line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/edit_Line"
        app:layout_constraintTop_toTopOf="@+id/edit_Line" />

    <Button
        android:id="@+id/new_paper"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/btn_show"
        android:fontFamily="sans-serif-black"
        android:freezesText="true"
        android:shadowColor="#00BCD4"
        android:text="@string/New_paper"
        android:textColor="@color/cardview_light_background"
        app:layout_constraintBottom_toBottomOf="@+id/edt_addr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/edit_Line"
        app:layout_constraintTop_toTopOf="@+id/edt_addr" />

    <TextView
        android:id="@+id/edit_Line"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="130dp"
        android:layout_marginRight="130dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/round"
        android:fadingEdge="horizontal|vertical"
        android:fontFamily="@font/amarante"
        android:freezesText="true"
        android:hint="@string/Line"
        android:includeFontPadding="true"
        android:inputType="textPostalAddress"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:shadowColor="#00BCD4"
        android:singleLine="false"
        android:textColor="@android:color/black"
        android:textColorHighlight="@color/colorPrimary"
        android:textColorHint="@color/hint"
        android:textColorLink="@color/colorPrimary"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/editTextDate2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_addr" />

    <EditText
        android:id="@+id/edt_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/round"
        android:fadingEdgeLength="3dp"
        android:fontFamily="@font/amarante"
        android:freezesText="false"
        android:hint="@string/customer_name"
        android:includeFontPadding="true"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:shadowColor="#00BCD4"
        android:textColor="@color/hint"
        android:textColorHint="@color/hint"
        app:layout_constraintBottom_toTopOf="@id/edt_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/round"
        android:fontFamily="@font/amarante"
        android:freezesText="false"
        android:hint="@string/phone_number"
        android:includeFontPadding="true"
        android:inputType="phone"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:shadowColor="#00BCD4"
        android:textColor="@color/hint"
        android:textColorHint="@color/hint"
        app:layout_constraintBottom_toTopOf="@id/edt_amo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_card" />

    <EditText
        android:id="@+id/edt_amo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/round"
        android:fontFamily="@font/amarante"
        android:freezesText="false"
        android:hint="@string/package_amount"
        android:includeFontPadding="true"
        android:inputType="phone"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:shadowColor="#00BCD4"
        android:textColor="@color/hint"
        android:textColorHint="@color/hint"
        app:layout_constraintBottom_toTopOf="@id/edt_addr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_phone" />

    <TextView
        android:id="@+id/edt_addr"
        android:layout_width="0px"
        android:minLines="3"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="130dp"
        android:singleLine="false"
        android:layout_marginRight="130dp"
        android:background="@drawable/round"
        android:inputType="textPersonName"
        android:fontFamily="@font/amarante"

        android:hint="@string/Papers"


        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:shadowColor="#00BCD4"

        android:textColor="@android:color/black"

        android:textColorHint="@color/hint"

        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/edit_Line"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edt_amo" />

    <Switch
        android:id="@+id/paid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginEnd="200dp"
        android:layout_marginRight="200dp"
        android:layout_marginBottom="80dp"
        android:fontFamily="@font/amarante"

        android:shadowColor="@color/hint"
        android:text="@string/Paid"
        android:textColor="@color/hint"
        android:textColorHighlight="@color/hint"
        android:textColorHint="@color/cardview_light_background"
        android:textColorLink="@color/colorPrimary"
        android:textIsSelectable="false"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextDate2" />

    <Button
        android:id="@+id/add"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/btn_show"
        android:fontFamily="sans-serif-black"
        android:freezesText="true"
        android:shadowColor="#00BCD4"
        android:text="@string/add"
        android:textColor="@color/cardview_light_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/paid" />

    <EditText
        android:id="@+id/edt_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/round"
        android:fontFamily="@font/amarante"
        android:freezesText="false"
        android:hint="@string/Card_number"
        android:includeFontPadding="true"
        android:inputType="phone"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:shadowColor="#00BCD4"
        android:textColor="@color/hint"
        android:textColorHint="@color/hint"
        app:layout_constraintBottom_toTopOf="@id/edt_phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_name" />

    <TextView
        android:id="@+id/editTextDate2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/round"
        android:ems="10"
        android:fontFamily="@font/amarante"
        android:freezesText="false"
        android:hint="@string/renew_date"
        android:inputType="date"
        android:paddingLeft="5dp"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:textColor="@color/hint"
        android:textColorHint="@color/hint"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/paid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_Line" />


</androidx.constraintlayout.widget.ConstraintLayout>